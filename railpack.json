{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        "cd server && npm ci",
        "cd portal && npm ci"
      ]
    },
    "build": {
      "inputs": [
        { "step": "install" }
      ],
      "commands": [
        "cd server && npm run build",
        "cd portal && npm run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "node server/dist/index.js"
  }
}
