{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install-server": {
      "commands": [
        "cd server",
        "npm ci"
      ]
    },
    "install-portal": {
      "commands": [
        "cd portal",
        "npm ci"
      ]
    },
    "build-server": {
      "inputs": [
        { "step": "install-server" }
      ],
      "commands": [
        "cd server",
        "npm run build"
      ]
    },
    "build-portal": {
      "inputs": [
        { "step": "install-portal" }
      ],
      "commands": [
        "cd portal",
        "npm run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "node server/dist/index.js"
  }
}
